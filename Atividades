//ATV HIPOTENUSA
Var
// Seção de Declarações das variáveis
cateto1: real
cateto2: real
hipotenusa: real


Inicio
// Seção de Comandos, procedimento, funções, operadores, etc...

 hipotenusa <- ( cateto1^2+cateto2^2)
 // resultado
escreval ("Informe o valor do primeiro cateto")
leia (cateto1)
escreval ("Informe o valor do segundo cateto")
leia (cateto2)
escreval ("O valor da hipotenusa é")
 hipotenusa <- ( cateto1^2+cateto2^2)
escreval (hipotenusa)

