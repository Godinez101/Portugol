// ATV 7 LEIA
Var
// Seção de Declarações das variáveis 
codigodoproduto: inteiro
quantidade: inteiro
valor: real
valorapagar: real


Inicio
escreval ("Digite o código do produto")
leia (codigodoproduto)
escreval ("Digite a quantidade do produto que quer comprar")
leia(quantidade)
escreval ("Digite o valor do produto")
leia (valor)
valorapagar '<- (quantidade*valor)
escreval ("O valor total a pagar é")
escreval (valorapagar)

