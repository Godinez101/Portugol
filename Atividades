// ATV PESO
Var
// Seção de Declarações das variáveis
pesodapessoa: real
altura: real
imc: real
Inicio
// Seção de Comandos, procedimento, funções, operadores, etc...
escreval("Digite o peso da pessoa")
leia (pesodapessoa)
escreval ("Digite a altura da pessoa")
leia (altura)
imc <- (altura*altura/pesodapessoa)
escreval(imc)
se (imc < 16.9^2)entao
escreval ("Voce está muito abaixo do peso")
se (imc = 18.4^2) entao
escreval ("Voce está abaixo do peso")
se (imc = 24.9^2) entao
escreval ("Voce está com o peso normal")
se (imc >= 29.9^2) entao
escreval ("Voce está acima do peso")
se (imc = 34.9^2) entao
escreval ("Voce esta com obesidade 1 grau")
se (imc = 40^2) entao
escreval ("voce esta com obesidade 2 grau")
se (imc > 40^2) entao
escreval ("Voce esta com obesidade 3 grau")
fimse
fimse
fimse
fimse
fimse
fimse
fimse
