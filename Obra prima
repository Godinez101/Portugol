// Hamburguer
caso 1
escreval ("Qual a quantidade de hamburgueres você deseja?")
leia (quantidade1)
valor1 <- 5.00
escreval ("O valor deu:")
escreval (valor1*quantidade1)
escreval ("Obrigado pela sua compra, volte sempre!!")

// Pizza
caso 2
