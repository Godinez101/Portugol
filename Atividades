Inicio
// Seção de Comandos, procedimento, funções, operadores, etc...
escreval("digite o valor do lado")
leia (lado)
area <-(lado^2)
perimetro <- (4*lado )
escreval ("O valor da area é:")
escreval (area)
escreval ("O valor do perimetro é:")
escreval (perimetro)

